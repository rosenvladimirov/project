<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_bom_import_form_view" model="ir.ui.view">
      <field name="name">product.bom.import.view</field>
      <field name="model">product.bom.import</field>
      <field name="arch" type="xml">
          <form string="Import product template">
              <p>
                  For import from remote database choice to update only images or to try to found product.
              </p>
              <group>
                  <field name="product_id" readonly="1" force_save="1"/>
                  <field name="default_code"/>
                  <field name="use_remote"/>
                  <field name="project_bom_id" invisible="1"/>
              </group>
              <footer>
                  <button name="import_product_bom" string="Import" type="object" class="oe_highlight"/>
                  <button special="cancel" string="Cancel" class="oe_link"/>
              </footer>
          </form>
      </field>
    </record>

    <record id="act_open_wizard_product_template_import" model="ir.actions.act_window">
      <field name="name">Import Product Bom</field>
      <field name="res_model">product.bom.import</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="product_bom_import_form_view"/>
      <field name="context">{'default_project_bom_id': active_id}</field>
      <field name="target">new</field>
      <field name="binding_model_id" ref="project_bom.model_project_mrp_bom"/>
    </record>

    <record id="act_open_wizard_product_template_import_ext" model="ir.actions.act_window">
      <field name="name">Import Product Bom</field>
      <field name="res_model">product.bom.import</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="view_id" ref="product_bom_import_form_view"/>
    </record>

</odoo>
